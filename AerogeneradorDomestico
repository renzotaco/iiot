    <script>
        const energeticPlayfulPalette = {
            blue: '#00A6A6',
            orange: '#F28F3B',
            red: '#E84855',
            purple: '#714955',
            grey: '#D9D9D9'
        };

        function wrapLabel(str, maxWidth) {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        }
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        new Chart(document.getElementById('hawtVsVawtChart'), {
            type: 'bar',
            data: {
                labels: ['Velocidad de Arranque (m/s)', 'Nivel de Ruido', 'Omnidireccional'],
                datasets: [{
                    label: 'HAWT (Tradicional)',
                    data: [5, 8, 0],
                    backgroundColor: energeticPlayfulPalette.red,
                    borderColor: energeticPlayfulPalette.red,
                    borderWidth: 1
                }, {
                    label: 'VAWT (Tulip√°n)',
                    data: [2, 3, 10],
                    backgroundColor: energeticPlayfulPalette.blue,
                    borderColor: energeticPlayfulPalette.blue,
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value, index, values) {
                                if (index === 2) return ['Bajo', 'Medio', 'Alto'][value/4];
                                if (index === 1) return ['Bajo', 'Medio', 'Alto'][value/4];
                                return value;
                            }
                        }
                    }
                },
                plugins: {
                    title: { display: true, text: 'Comparativa de Tecnolog√≠as E√≥licas Urbanas' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });

        new Chart(document.getElementById('diyComplexityChart'), {
            type: 'doughnut',
            data: {
                labels: ['Fabricaci√≥n de Palas', 'Estructura y Montaje', 'Sistema El√©ctrico'],
                datasets: [{
                    data: [55, 25, 20],
                    backgroundColor: [energeticPlayfulPalette.red, energeticPlayfulPalette.orange, energeticPlayfulPalette.blue],
                    hoverOffset: 4
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    title: { display: true, text: 'Distribuci√≥n de la Complejidad del Proyecto' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
        
        new Chart(document.getElementById('windSpeedChart'), {
            type: 'bar',
            data: {
                labels: ['Velocidad de Arranque', 'Velocidad Nominal'],
                datasets: [{
                    label: 'Velocidad M√≠nima (m/s)',
                    data: [1.3, 12],
                    backgroundColor: energeticPlayfulPalette.orange,
                }, {
                    label: 'Velocidad M√°xima (m/s)',
                    data: [2.5, 12],
                    backgroundColor: energeticPlayfulPalette.blue,
                }]
            },
            options: {
                indexAxis: 'y',
                maintainAspectRatio: false,
                scales: { x: { beginAtZero: true } },
                plugins: {
                    legend: { display: true },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });

        new Chart(document.getElementById('techSpecsChart'), {
            type: 'radar',
            data: {
                labels: [wrapLabel('Altura de Montaje (m)', 16), 'Potencia (W)', wrapLabel('Voltaje del Sistema (V)', 16)],
                datasets: [{
                    label: 'Rango Recomendado',
                    data: [9.5, 5150, 30],
                    fill: true,
                    backgroundColor: 'rgba(0, 166, 166, 0.2)',
                    borderColor: energeticPlayfulPalette.blue,
                    pointBackgroundColor: energeticPlayfulPalette.blue,
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { display: false },
                        suggestedMin: 0,
                        pointLabels: { font: { size: 10 } }
                    }
                },
                plugins: {
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
    </script>

